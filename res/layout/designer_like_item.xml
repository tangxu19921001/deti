<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.example.deti"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
    <com.example.deti.widge.CircleImageView
            android:id="@+id/designer_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"

            android:src="@drawable/icon_men_sel"
            app:border_width="2dp"
            app:border_color="@color/black"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
    <LinearLayout

            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:gravity="center_vertical"

            android:background="@drawable/icon_designer_back"

            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:layout_width="15dp"

                android:src="@drawable/icon_designer_avatar"
                android:layout_height="15dp"/>
        <TextView
                android:id="@+id/favorite_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"

                android:text="0"/>
    </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

<TextView
        android:id="@+id/realName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="xx"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/designer_dizhi"

                />
        <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国"/>
        <TextView
                android:id="@+id/city"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"/>


    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">
        <TextView
                android:gravity="center"
                android:id="@+id/designer_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"
                />
    </LinearLayout>

</LinearLayout>