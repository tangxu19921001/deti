<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
        >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:background="@color/blue"
            >
        <RelativeLayout
                android:id="@+id/register_login_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="22dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:background="@drawable/login_edit_bg"
                    android:visibility="visible">
                <EditText
                        android:id="@+id/user_name_edit"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"

                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:hint="@string/user_name"
                        android:textColorHint="@color/gray"
                        android:background="@color/white"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/login_register_line"/>
                <EditText
                        android:id="@+id/usr_password_edit"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:textColorHint="@color/gray"
                        android:background="@color/white"
                        android:hint="@string/user_password"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_below="@+id/login_layout"
                    android:orientation="horizontal">
                <Button
                        android:id="@+id/register"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:text="@string/register"/>
                <Button
                        android:id="@+id/login"
                        android:layout_margin="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/green"
                        android:text="@string/login"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
                android:id="@+id/login_success_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="xxxxxxxxxx"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:visibility="gone"/>
        <Button
                android:id="@+id/login_out"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/green"
                android:visibility="gone"
                android:text="@string/login_out"/>
        <LinearLayout
                android:id="@+id/money_layout"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_below="@+id/register_login_layout"
                android:layout_centerHorizontal="true">
            <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rich_icon"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxx"
                    android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/achievement_layout"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_below="@+id/money_layout"
                android:layout_centerHorizontal="true">
            <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rich_icon"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/achievment"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxx"
                    android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/blue"></View>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/id_card_bg"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/id_card_bg"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/go_to_identity"/>


    </RelativeLayout>

</LinearLayout>

